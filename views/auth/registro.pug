extends ../layout/index

block contenido
    div.py-10
        h1.text-teal-600.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        //- Mostramos los errores
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-xl")= error.msg
                    

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder="Escribe tu Nombre" name="nombre" value =usuario ? usuario.nombre:'')
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder="Escribe tu Email" name="email" type="email" value =usuario ? usuario.email:'')
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder="Escribe tu Password" name="password" type="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="repetir_password") Repite tu Password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder="Repite tu Password" name="repetir_password" type="password")

                    input(class="w-full bg-teal-600 hover:bg-teal-700 text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Crear Cuenta")

                    .flex.tems-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/login") Â¿Ya tienes cuenta? Inicia Sesion
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password 