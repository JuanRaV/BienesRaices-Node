extends ../layout/index

block contenido
    div.py-10
        h1.text-teal-600.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-xl")= error.msg
                    
        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder="Escribe tu Email" name="email" type="email")

                    input(class="w-full bg-teal-600 hover:bg-teal-700 text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Enviar Instrucciones")
                
                    .flex.tems-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesion
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Registrate
                        